{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true /* allow things like `import React from "react"` */,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true /* use tslib */,
    "jsx": "react-native",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "dist"]
}
