{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": ["esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": true,
    "noEmitHelpers": true,
    "emitDeclarationOnly": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "strict": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["src"]
}
