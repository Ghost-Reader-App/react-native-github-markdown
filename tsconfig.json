{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true /* allow things like `import React from "react"` */,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true /* use tslib */,
    "jsx": "react-native",
    "lib": ["es2018"],
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["node_modules", "dist"]
}
